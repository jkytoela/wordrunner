{
	"name": "wordrunner",
	"version": "1.0.0",
	"license": "MIT",
	"scripts": {
		"dev": "next dev",
		"build": "next build build",
		"start": "next start",
		"test": "xo !*.config.js"
	},
	"dependencies": {
		"@xstate/react": "^1.2.2",
		"next": "10.0.3",
		"next-pwa": "^5.0.5",
		"next-themes": "^0.0.10",
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"react-range": "^1.8.7",
		"xstate": "^4.16.2"
	},
	"devDependencies": {
		"@types/node": "^14.14.25",
		"@types/react": "^17.0.1",
		"autoprefixer": "^10.2.4",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-config-xo-typescript": "^0.37.0",
		"eslint-plugin-react": "^7.22.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"postcss": "^8.2.5",
		"tailwindcss": "^2.0.3",
		"typescript": "^4.1.3",
		"xo": "^0.37.1"
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"jsxSingleQuote": false
	},
	"xo": {
		"prettier": "true",
		"extends": [
			"xo-typescript",
			"xo-react"
		],
		"rules": {
			"react/react-in-jsx-scope": "off",
			"react/no-unescaped-entities": "off",
			"new-cap": 0,
			"react/jsx-max-props-per-line": [2, {"maximum": 6, "when": "always" }],
      "react/jsx-first-prop-new-line": "off"
		}
	}
}
